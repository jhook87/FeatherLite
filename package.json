{
  "name": "featherlite-store",
  "private": true,
  "version": "0.1.0",
  "description": "FeatherLite cosmetics storefront built with Next.js and Prisma",
  "scripts": {
    "dev": "next dev",
    "prebuild": "prisma generate",
    "build": "next build",
    "postbuild": "npm run build:seed",
    "start": "next start",
    "prisma": "prisma",
    "prisma:deploy": "node ./scripts/prisma-deploy.mjs",
    "build:seed": "tsc -p prisma/tsconfig.json",
    "seed": "npx tsx prisma/seed.ts",
    "seed:prod": "node prisma/dist/seed.js",
    "assets:organize": "node ../scripts/organize-assets.mjs",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "clsx": "^2.1.1",
    "@shopify/admin-api-client": "^1.0.6",
    "@shopify/shopify-api": "^11.0.1",
    "shopify-buy": "^2.20.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/shopify-buy": "^2.17.4",
    "autoprefixer": "^10.4.14",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.5.4",
    "postcss": "^8.4.24",
    "tsx": "^4.16.5"
  }
}