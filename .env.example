# Core runtime configuration
# NODE_ENV is optional locally but is enforced in hosted environments
NODE_ENV="development"
# Set to "true" only when you explicitly want to skip runtime env validation (not recommended)
SKIP_ENV_VALIDATION="false"

# Database connection for Prisma and Next.js API routes
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# Shopify storefront credentials (required for product catalog and cart APIs)
SHOPIFY_STORE_DOMAIN="your-shop.myshopify.com"
SHOPIFY_STOREFRONT_ACCESS_TOKEN="storefront-access-token"
# Update only if you are targeting a different Storefront API version
SHOPIFY_STOREFRONT_API_VERSION="2024-04"

# Shopify admin credentials (required for order syncing and admin APIs)
SHOPIFY_ADMIN_ACCESS_TOKEN="admin-access-token"
# Update only if you are targeting a different Admin API version
SHOPIFY_ADMIN_API_VERSION="2024-07"
SHOPIFY_WEBHOOK_SECRET="webhook-secret"

# Admin review moderation credentials
REVIEW_ADMIN_EMAIL="admin@featherlite.test"
# Hash format must be "sha256:<hex>".
# Generate with: echo -n "your-strong-password" | openssl dgst -sha256 -hex | awk '{print $2}' | xargs -I{} printf "sha256:%s\n" {}
REVIEW_ADMIN_PASSWORD_HASH="sha256:replace-with-64-character-hex-digest"
# The secret must be at least 32 characters long
REVIEW_ADMIN_SECRET="replace-with-random-secret"

# Optional legacy fallbacks (used when REVIEW_* variables are not provided)
# ADMIN_EMAIL="admin@featherlite.test"
# ADMIN_PASSWORD_HASH="plain:local-dev-only"
# NEXTAUTH_SECRET="replace-with-random-secret"

# Optional: disable Next.js telemetry in CI/CD environments
NEXT_TELEMETRY_DISABLED="1"

# Optional: override production seed safeguard (leave "false" in almost all cases)
ALLOW_PRISMA_SEED="false"
